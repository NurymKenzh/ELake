@model ELake.Models.LakesArchiveDataIndexPageViewModel
@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@using System.Net
@{
    ViewData["Title"] = SharedLocalizer["LakesArchiveDatas"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 offset-md-1 mt-3">
            <div class="list-group">
                <div class="alert alert-primary" role="alert">
                    <h5 class="alert-heading">@SharedLocalizer["Tables"]</h5>
                </div>
                <a class="list-group-item list-group-item-action" asp-controller="Lakes" asp-action="Index">@SharedLocalizer["Lakes"]</a>
                <a class="list-group-item list-group-item-action active" asp-controller="LakesArchiveDatas" asp-action="Index">@SharedLocalizer["LakesArchiveDatas"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="LakesGlobalDatas" asp-action="Index">@SharedLocalizer["LakesGlobalDatas"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="LakeSystems" asp-action="Index">@SharedLocalizer["LakeSystems"]</a>
            </div>
        </div>
        <div class="col-md-8 mt-3">
            <div class="alert alert-primary" role="alert">
                <h4 class="alert-heading">@SharedLocalizer["LakesArchiveDatas"]</h4>
                <hr>
                <p class="mb-0">There should be a description or video</p>
            </div>
            <div class="col-auto">
                <p>
                    <a class="btn btn-outline-success ml-1" asp-action="Create"><i class="fa fa-pencil"></i> @SharedLocalizer["Create"]</a>
                    <a class="btn btn-outline-success ml-1" asp-action="Upload"><i class="fa fa-pencil"></i> @SharedLocalizer["Upload"]</a>
                </p>
            </div>
            <div class="table-responsive"  style="overflow-x: auto;">
                @using (Html.BeginForm("Index", "LakesArchiveDatas", new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter }, FormMethod.Get))
                {
                    @Html.Editor("SortOrder", null, new { htmlAttributes = new { @hidden = "hidden" }, value = ViewBag.SortOrder })
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                            @if (Model.Pager.CurrentPage > 1)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                        new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                            }
                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                            {

                                <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                    @Html.ActionLink(page.ToString(), "Index",
                                        new { Page = page, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                            }
                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                        new { Page = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                            }
                        </ul>
                    }
                    <table class="table table-striped table-bordered table-sm">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col" class="align-middle" style="width: 100px;">
                                    <form>
                                        <div class="form-group">
                                            <label for="LakeId">
                                                @Html.ActionLink(Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeId).ToString(), "Index",
                                          new { SortOrder = ViewBag.LakeIdSort, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                            </label>
                                            @Html.Editor("LakeId", null, new { htmlAttributes = new { @class = "form-control is-valid", placeholder = SharedLocalizer["LakeId"] }, value = "" })
                                        </div>
                                    </form>
                                </th>
                                <th scope="col" class="align-middle" style="width: 120px;">
                                    <form>
                                        <div class="form-group">
                                            <label for="SurveyYear">
                                                @Html.ActionLink(Html.DisplayNameFor(b => b.Items.FirstOrDefault().SurveyYear).ToString(), "Index",
                                           new { SortOrder = ViewBag.SurveyYearSort, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                            </label>
                                            @Html.Editor("SurveyYear", null, new { htmlAttributes = new { @class = "form-control is-valid", placeholder = SharedLocalizer["SurveyYear"] }, value = "" })
                                        </div>
                                    </form>
                                </th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeLength)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeShorelineLength)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeMirrorArea)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeAbsoluteHeight)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeWidth)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeMaxDepth)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeWaterMass)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().ArchivalInfoSource)</th>
                                <th scope="col" class="align-middle"><input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-outline-primary"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(modelItem => item.LakeId)</th>
                                    <td>@Html.DisplayFor(modelItem => item.SurveyYear)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeLength)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeShorelineLength)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeMirrorArea)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeAbsoluteHeight)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeWidth)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeMaxDepth)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LakeWaterMass)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ArchivalInfoSource)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> |
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                            @if (Model.Pager.CurrentPage > 1)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                        new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                            }
                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                            {
                                <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                    @Html.ActionLink(page.ToString(), "Index",
                                        new { Page = page, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                            }
                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                        new { Page = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, SurveyYear = ViewBag.SurveyYearFilter })
                                </li>
                            }
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
</div>
