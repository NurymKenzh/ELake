@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = @SharedLocalizer["Home"];
}

<link href="~/lib/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-ui/jquery-ui.js"></script>

<body>
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
                <div class="carousel-item active" style="background-image: url(../images/sl01.JPG)">
                    <h1 class="mb59"> Lakes of the Republic of Kazakhstan!</h1>
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Ulken Shabakty lake </h3>
                        <p>Lake Ulken Shabakty is the largest of all ShchBSO lakes by area and depth.</p>
                    </div>
                </div>
                <!-- Slide Two - Set the background image for this slide in the line below -->
                <div class="carousel-item" style="background-image: url(../images/sl04.JPG)">
                    <h1 class="mb59"> Lakes of the Republic of Kazakhstan!</h1>
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Zhasibay lake</h3>
                        <p>Lake Zhasybay is located in a natural hollow between mountain ranges with Akbet peaks (1022 m) from the north-east and Ogolek (958 m) from the south-west.</p>
                    </div>
                </div>
                <!-- Slide Three - Set the background image for this slide in the line below -->
                <div class="carousel-item" style="background-image: url(../images/sl06.JPG)">
                    <h1 class="mb59" Lakes of the Republic of Kazakhstan!</h1>
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Inder lake</h3>
                        <p>Located in the northern part of the Caspian Lowland, 10 km to the east of the Ural River, 5 km from the southern border of the West Kazakhstan region.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>
    <!-- Icons Grid -->
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <a class="btn btn-outline-light" asp-controller="Lakes" asp-action="Map">
                            <div class="features-icons-icon d-flex">
                                <i class="icon-magnifier m-auto text-primary"></i>
                            </div>
                        </a>
                        <h3>Advanced Lakes Search</h3>
                        <p class="lead mb-0">Go to the page where you can find any lake not only by its name, but also by its administrative (region, district) or water management location (water basin, water sector).</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                        <a class="btn btn-outline-light" asp-controller="Lakes" asp-action="Analytics">
                            <div class="features-icons-icon d-flex">
                                <i class="icon-settings m-auto text-primary"></i>
                            </div>
                        </a>
                        <h3>Analytics</h3>
                        <p class="lead mb-0">Go to the page where you can find the lakes corresponding to the specified parameters (morphometric, hydrological, hydrochemical and other parameters). Available only for registered users.</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                        <a class="btn btn-outline-light" asp-controller="Layers" asp-action="Index">
                            <div class="features-icons-icon d-flex">
                                <i class="icon-layers m-auto text-primary"></i>
                            </div>
                        </a>
                        <h3>Map layers</h3>
                        <p class="lead mb-0">Go to the page where you have published a list of raster and vector layers that you can view separately in the map viewer. <br /><span class=" text-muted">This page is under construction</span>.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Call to Action -->
    <section class="call-to-action text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h2 class="mb-4">@SharedLocalizer["SearchByLakeName"]</h2>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row" id="LakeIdDiv">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input id="LakeId" class="form-control form-control-lg" placeholder="Enter lake name..." onclick="GoToLake()">
                            </div>
                            <div class="col-12 col-md-3">
                                <button id="btnSearch" type="button" class="btn btn-block btn-lg btn-primary" onclick="GoToLake()">@SharedLocalizer["Search"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Greeting -->
    <section class="greeting text-center bg-light">
        <img class="mb-0" src="~/images/ELake v02.png" alt="" height="150">
        <h2>Welcome to the web Atlas &quot;Lakes of Kazakhstan&quot;!</h2>
        <p class="lead ml-5 mr-5 text-justify" style="text-indent: 2.5em;">
            The web application “Atlas of Lakes of Kazakhstan” (“E-Lake”) was developed by the Institute of Geography of the Republic of Kazakhstan in 2018. 
            Atlas information is presented in the form of interactive layers of maps, tables and graphs. At the moment, the 
            Atlas of Lakes contains information about location and general characteristics of 2328 lakes in Kazakhstan with area more than 1 km<sup>2</sup>.</p>
        <p class="lead ml-5 mr-5 text-justify" style="text-indent: 2.5em;">
            The Internet - resource of Kazakhstan lakes is intended for decision makers in the field of water management, for the scientific and educational community, and for all who want to learn more about lakes.
            resources.
        </p>

    </section>
    <!-- Image Showcases -->
    <section class="showcase pb-5">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url(../images/sl07.JPG);"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2>Data of the web Atlas  &quot;Lakes of Kazakhstan&quot;</h2>
                    <p class="lead text-justify mb-0" style="text-indent: 2.5em;">The Atlas of Lakes of Kazakhstan provides the following data: morphometric characteristics of lakes obtained from remote sensing data, historical data and 
                    data from the global lake base, as well as hydrological indicators (water balance elements) and hydrochemical indicators (general hydrochemistry, ion-salt composition, toxicology) 
                    of individual lakes, area more than 10 km<sup>2</sup>.</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 text-white showcase-img" style="background-image: url(../images/sl08.JPG);"></div>
                <div class="col-lg-6 my-auto showcase-text">
                    <h2>Functionality of the web Atlas &quot;Lakes of Kazakhstan&quot;</h2>
                    <p class="lead text-justify mb-0" style="text-indent: 2.5em;">The functions of the Atlas of Lakes of Kazakhstan allows finding lakes by administrative and water management location, viewing the dynamics of values of indicators of individual lakes, 
                    and the analytical query designer will allow determining lakes corresponding to the specified parameters to determine status and perspectives of using lakes.</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url(../images/sl09.JPG);"></div>
                <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                    <h2>Limitations on the use of data &quot;Lakes of Kazakhstan&quot;</h2>
                    <p class="lead text-justify mb-0" style="text-indent: 2.5em;">
                        Separate data of the Atlas of lakes of Kazakhstan (the data which do not have references to a data source) created by Institute of geography of the Republic of Kazakhstan and are provided on free of charge with the requirement
                        of observance of copyright and obligation of the reference to this web resource <a href="http://elake.geoset.kz">(http://elake.geoset.kz)</a>.
                    </p>
                </div>
            </div>
        </div>
    </section>
</body>

<script>
    $("#LakeId").keypress(function (event) {
        if (event.which == 13) {
            $("#btnSearch").click();
            return false;
        }
    });
</script>

<script>
    function GoToLake() {
        alert($('#LakeId').val());
        $.ajax({
            url: '@Url.Action("GetLakeId")',
            data: {
                LakeName: $('#LakeId').val()
            },
            type: 'POST',
            success: function (data) {
                if (data.lakeId != null) {
                    window.location.href = '/Lakes/Map/' + data.lakeId.toString();
                }
            },
            error: function () {
            }
        });
    }
</script>
<script>
    $.ajax({
        url: '@Url.Action("SearchLakes")',
        type: 'POST',
        success: function (data) {
            $("#LakeId").autocomplete({
                source: data.lakes
            });
        },
        error: function () {
        }
    });
</script>