<script>
    function ChangeType() {
        $.ajax({
            url: '@Url.Action("GetWaterDates")',
            data: {
                Type: $('#Type').val()
            },
            type: 'POST',
            success: function (data) {
                var optionhtml = '';
                $.each(data, function (i) {
                    optionhtml += '<option value="' + data[i] + '"' +
                        '>' + data[i] +
                        '</option>';
                });
                $("#Folder").empty();
                $('#Folder').append(optionhtml);
            },
            error: function () {
            }
        });
    }

    $(document).ready(function () {
        ChangeType();
    });
</script>