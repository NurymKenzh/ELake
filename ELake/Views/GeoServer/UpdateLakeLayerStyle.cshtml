@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["UpdateLakeLayerStyle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["UpdateLakeLayerStyle"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateLakeLayerStyle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["ShapeFile"]</label>
                <select name="ShapeFile" class="form-control" asp-items="ViewBag.ShapeFiles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Update"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>