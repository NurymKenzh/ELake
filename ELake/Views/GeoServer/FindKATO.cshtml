@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FindKATO"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["FindKATO"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FindKATO">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["Layer"]</label>
                <select name="LayerId" class="form-control" asp-items="ViewBag.LakeLayers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>