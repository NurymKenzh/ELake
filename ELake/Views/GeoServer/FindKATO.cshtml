@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["FindKATO"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-3">
            <div class="alert alert-primary" role="alert">
                <button type="button" class="close" data-dismiss="alert">x</button> <h4 class="alert-heading">@SharedLocalizer["FindKATO"]</h4>
                <hr />
                <div class="d-flex bd-highlight">
                    <div class="p-2 flex-grow-1 bd-highlight">
                        <p class="lead text-info">There should be a description</p>
                    </div>
                    <!-- Button trigger modal -->
                    <div class="bd-highlight">
                        <button type="button" class="btn btn-link" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-exclamation-triangle"></i></button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert-warning" role="alert">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-3">
            <form asp-action="FindKATO">
                <div class="form-row align-items-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-auto my-1">
                        <label class="font-weight-bold text-dark">@SharedLocalizer["Layer"]</label>
                    </div>
                    <div class="col-sm-5 my-1">
                        <select name="LayerId" class="form-control" asp-items="ViewBag.LakeLayers"></select>
                    </div>
                    <div class="col-auto my-1">
                        <input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-outline-primary" />                        
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>






