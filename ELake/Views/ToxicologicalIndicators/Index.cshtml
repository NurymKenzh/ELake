@model ELake.Models.ToxicologicalIndicatorIndexPageViewModel
@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@using System.Net
@{
    ViewData["Title"] = SharedLocalizer["ToxicologicalIndicators"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 offset-md-1 mt-3">
            <div class="list-group">
                <div class="alert alert-primary" role="alert">
                    <h5 class="alert-heading">@SharedLocalizer["Tables"]</h5>
                </div>
                <a class="list-group-item list-group-item-action" asp-controller="GeneralHydrochemicalIndicators" asp-action="Index">@SharedLocalizer["GeneralHydrochemicalIndicators"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="IonsaltWaterCompositions" asp-action="Index">@SharedLocalizer["IonsaltWaterCompositions"]</a>
                <a class="list-group-item list-group-item-action active" asp-controller="ToxicologicalIndicators" asp-action="Index">@SharedLocalizer["ToxicologicalIndicators"]</a>
            </div>
        </div>
        <div class="col-md-8 mt-3">
            <div class="alert alert-primary" role="alert">
                <h4 class="alert-heading">@SharedLocalizer["ToxicologicalIndicators"]</h4>
                <hr>
                <p class="mb-0">There should be a description or video</p>
            </div>
            <div class="col-auto">
                <p>
                    <a class="btn btn-outline-success ml-1" asp-action="Create"><i class="fa fa-pencil"></i> @SharedLocalizer["Create"]</a>
                    <a class="btn btn-outline-success ml-1" asp-action="Upload"><i class="fa fa-pencil"></i> @SharedLocalizer["Upload"]</a>
                </p>
            </div>
            <div class="table-responsive" style="overflow-x: auto;">
                @using (Html.BeginForm("Index", "ToxicologicalIndicators", new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter }, FormMethod.Get))
                {
                    @Html.Editor("SortOrder", null, new { htmlAttributes = new { @hidden = "hidden" }, value = ViewBag.SortOrder })
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                                    @if (Model.Pager.CurrentPage > 1)
                                    {
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                                new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                        </li>
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                                new { Page = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                        </li>
                                    }
                                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                    {

                                        <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                            @Html.ActionLink(page.ToString(), "Index",
                                                new { Page = page, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                        </li>
                                    }
                                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                    {
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                                new { Page = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                        </li>
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                                new { Page = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                        </li>
                                    }
                                </ul>
                    }
                    <table class="table table-striped table-bordered table-sm">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col" class="align-middle" style="width: 80px;">
                                    <form>
                                        <div class="form-group">
                                            <label for="LakeId">
                                                @Html.ActionLink(Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeId).ToString(), "Index",
                                        new { SortOrder = ViewBag.LakeIdSort, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                            </label>
                                            @Html.Editor("LakeId", null, new { htmlAttributes = new { @class = "form-control is-valid", placeholder = SharedLocalizer["LakeId"] }, value = "" })
                                        </div>
                                    </form>
                                </th>
                                <th scope="col" class="align-middle" style="width: 80px;">
                                    <form>
                                        <div class="form-group">
                                            <label for="LakeId">
                                                @Html.ActionLink(Html.DisplayNameFor(b => b.Items.FirstOrDefault().Year).ToString(), "Index",
                                       new { SortOrder = ViewBag.YearSort, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                            </label>
                                            @Html.Editor("Year", null, new { htmlAttributes = new { @class = "form-control is-valid", placeholder = SharedLocalizer["Year"] }, value = "" })
                                        </div>
                                    </form>
                                </th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakePart)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().NH4)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().NO2)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().NO3)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().PPO4)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Cu)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Zn)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Mn)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Pb)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Ni)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Cd)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().Co)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().KIZV)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().KIZVs)</th>
                                <th scope="col" class="align-middle"><input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-outline-primary"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(modelItem => item.LakeId)</th>
                                    <td>@Html.DisplayFor(modelItem => item.Year)</td>
                                    <td>@SharedLocalizer[item.LakePart.ToString()]</td>
                                    <td>@Html.DisplayFor(modelItem => item.NH4)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NO2)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NO3)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PPO4)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Cu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Zn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Mn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Pb)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ni)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Cd)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Co)</td>
                                    <td>@Html.DisplayFor(modelItem => item.KIZV)</td>
                                    <td>@Html.DisplayFor(modelItem => item.KIZVs)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> |
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>                        
                    </table>
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                            @if (Model.Pager.CurrentPage > 1)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                        new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                </li>
                            }
                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                            {

                                <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                    @Html.ActionLink(page.ToString(), "Index",
                                        new { Page = page, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                </li>
                            }
                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                        new { Page = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter, Year = ViewBag.YearFilter })
                                </li>
                            }
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
</div>