@model ELake.Models.NutrientsHeavyMetalsStandardIndexPageViewModel
@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@using System.Net
@{
    ViewData["Title"] = SharedLocalizer["NutrientsHeavyMetalsStandards"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 offset-md-1 mt-3">
            <div class="list-group">
                <div class="alert alert-primary" role="alert">
                    <h5 class="alert-heading">@SharedLocalizer["Directories"]</h5>
                </div>
                <a class="list-group-item list-group-item-action" asp-controller="DocumentTypes" asp-action="Index">@SharedLocalizer["DocumentTypes"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="RegulatoryDocuments" asp-action="Index">@SharedLocalizer["RegulatoryDocuments"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="MeasurementUnits" asp-action="Index">@SharedLocalizer["MeasurementUnits"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="GeneralHydrochemicalIndicatorStandards" asp-action="Index">@SharedLocalizer["GeneralHydrochemicalIndicatorStandards"]</a>
                <a class="list-group-item list-group-item-action active" asp-controller="NutrientsHeavyMetalsStandards" asp-action="Index">@SharedLocalizer["NutrientsHeavyMetalsStandards"]</a>
            </div>
        </div>
        <div class="col-md-8 mt-3">
            <div class="alert alert-primary" role="alert">
                <h4 class="alert-heading">@SharedLocalizer["NutrientsHeavyMetalsStandards"]</h4>
                <hr>
                <p class="mb-0">There should be a description or video</p>
            </div>
            <div class="col-auto">
                <p>
                    <a class="btn btn-outline-success ml-1" asp-action="Create"><i class="fa fa-pencil"></i> @SharedLocalizer["Create"]</a>
                </p>
            </div>
            <div class="table-responsive" style="overflow-x: auto;">
                @using (Html.BeginForm("Index", "NutrientsHeavyMetalsStandards", new {  }, FormMethod.Get))
                {
                    @Html.Editor("SortOrder", null, new { htmlAttributes = new { @hidden = "hidden" }, value = ViewBag.SortOrder })
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                                    @if (Model.Pager.CurrentPage > 1)
                                    {
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                                new {  })
                                        </li>
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                                new { Page = Model.Pager.CurrentPage - 1 })
                                        </li>
                                    }
                                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                    {

                                        <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                            @Html.ActionLink(page.ToString(), "Index",
                                                new { Page = page })
                                        </li>
                                    }
                                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                    {
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                                new { Page = Model.Pager.CurrentPage + 1 })
                                        </li>
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                                new { Page = Model.Pager.TotalPages })
                                        </li>
                                    }
                                </ul>
                    }
                    <table class="table table-striped table-bordered table-sm">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col" class="align-middle" style="min-width: 300px;">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().RegulatoryDocument)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCNH4)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCNO2)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCNO3)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCPPO4)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCCu)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCZn)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCMn)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCPb)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCNi)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCCd)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().MPCCo)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassNH4)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassNO2)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassNO3)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassPPO4)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassCu)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassZn)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassMn)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassPb)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassNi)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassCd)</th>
                                <th scope="col" class="align-middle">@Html.DisplayNameFor(b => b.Items.FirstOrDefault().HazardClassCo)</th>
                                <th scope="col" class="align-middle"><input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-outline-primary"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(modelItem => item.RegulatoryDocument.Name)</th>
                                    <td>@Html.DisplayFor(modelItem => item.MPCNH4)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCNO2)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCNO3)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCPPO4)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCCu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCZn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCMn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCPb)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCNi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCCd)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MPCCo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassNH4)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassNO2)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassNO3)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassPPO4)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassCu)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassZn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassMn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassPb)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassNi)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassCd)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HazardClassCo)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> |
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>                        
                    </table>
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                            @if (Model.Pager.CurrentPage > 1)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                        new {  })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage - 1 })
                                </li>
                            }
                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                            {
                                <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                    @Html.ActionLink(page.ToString(), "Index",
                                        new { Page = page })
                                </li>
                            }
                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage + 1 })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                        new { Page = Model.Pager.TotalPages })
                                </li>
                            }
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
</div>
