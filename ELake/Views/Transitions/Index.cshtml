@model ELake.Models.TransitionIndexPageViewModel
@using ELake.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@using System.Net
@{
    ViewData["Title"] = SharedLocalizer["Transitions"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 offset-md-1 mt-3">
            <div class="list-group">
                <div class="alert alert-primary" role="alert">
                    <h5 class="alert-heading">@SharedLocalizer["Tables"]</h5>
                </div>
                <a class="list-group-item list-group-item-action active" asp-controller="Transitions" asp-action="Index">@SharedLocalizer["Transitions"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="Seasonalits" asp-action="Index">@SharedLocalizer["Seasonalits"]</a>
                <a class="list-group-item list-group-item-action" asp-controller="DynamicsLakeAreas" asp-action="Index">@SharedLocalizer["DynamicsLakeAreas"]</a>
            </div>
        </div>
        <div class="col-md-8 mt-3">
            <div class="alert alert-primary" role="alert">
                <h4 class="alert-heading">@SharedLocalizer["Transitions"]</h4>
                <hr>
                <p class="mb-0">There should be a description or video</p>
            </div>
            <div class="col-auto">
                <p>
                    <a class="btn btn-outline-success ml-1" asp-action="Create"><i class="fa fa-pencil"></i> @SharedLocalizer["Create"]</a>
                    <a class="btn btn-outline-success ml-1" asp-action="Upload"><i class="fa fa-pencil"></i> @SharedLocalizer["Upload"]</a>
                </p>
            </div>
            <div class="table-responsive" style="overflow-x: auto;">
                @using (Html.BeginForm("Index", "Transitions", new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter }, FormMethod.Get))
                {
                    @Html.Editor("SortOrder", null, new { htmlAttributes = new { @hidden = "hidden" }, value = ViewBag.SortOrder })
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                                    @if (Model.Pager.CurrentPage > 1)
                                    {
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                                new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                        </li>
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                                new { Page = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                        </li>
                                    }
                                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                    {

                                        <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                            @Html.ActionLink(page.ToString(), "Index",
                                                new { Page = page, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                        </li>
                                    }
                                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                    {
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                                new { Page = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                        </li>
                                        <li class="page-item page-link">
                                            @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                                new { Page = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                        </li>
                                    }
                                </ul>
                    }
                    <table class="table table-striped table-bordered table-sm">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col" class="align-middle" style="width: 100px;">
                                    <form>
                                        <div class="form-group">
                                            <label for="LakeId">
                                                @Html.ActionLink(Html.DisplayNameFor(b => b.Items.FirstOrDefault().LakeId).ToString(), "Index",
                                           new { SortOrder = ViewBag.LakeIdSort, LakeId = ViewBag.LakeIdFilter })
                                            </label>
                                            @Html.Editor("LakeId", null, new { htmlAttributes = new { @class = "form-control is-valid", placeholder = SharedLocalizer["LakeId"] }, value = "" })
                                        </div>
                                    </form>
                                </th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().NoСhange)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().Permanent)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().NewPermanent)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LostPermanent)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().Seasonal)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().NewSeasonal)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().LostSeasonal)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().SeasonalToPermanent)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().PermanentToDeasonal)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().EphemeralPermanent)</th>
                                <th scope="col" class="align-middle"> @Html.DisplayNameFor(b => b.Items.FirstOrDefault().EphemeralSeasonal)</th>
                                <th scope="col" class="align-middle"><input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-outline-primary"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <th scope="row">@Html.DisplayFor(modelItem => item.LakeId)</th>
                                    <td>@Html.DisplayFor(modelItem => item.NoСhange)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Permanent)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NewPermanent)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LostPermanent)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Seasonal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NewSeasonal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LostSeasonal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SeasonalToPermanent)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PermanentToDeasonal)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EphemeralPermanent)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EphemeralSeasonal)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> |
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>                        
                    </table>
                    @if (Model.Pager.EndPage > 1)
                    {
                        <ul class="pagination justify-content-md-start">
                            @if (Model.Pager.CurrentPage > 1)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                                        new { SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                </li>
                            }
                            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                            {
                                <li class="page-item page-link @(page == Model.Pager.CurrentPage ? "active" : "")" @(page == Model.Pager.CurrentPage ? "style=background-color:#b8daff;" : "")>
                                    @Html.ActionLink(page.ToString(), "Index",
                                        new { Page = page, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                </li>
                            }
                            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                            {
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                                        new { Page = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                </li>
                                <li class="page-item page-link">
                                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                                        new { Page = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrder, LakeId = ViewBag.LakeIdFilter })
                                </li>
                            }
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
</div>
